    "@nestjs/core": "^10.4.20",
    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/platform-express": "^10.4.20",
    "adminjs": "^7.8.15",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^4.21.2",
    "express-formidable": "^1.2.0",
    "express-session": "^1.18.2",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
